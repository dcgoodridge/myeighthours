<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="169.0" prefWidth="359.0" spacing="10.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="myeighthours.viewcontroller.FichajeEditController">
    <children>
        <Label fx:id="l_direccion" text="Direccion del fichaje ( entrada / salida ):" />
        <ChoiceBox fx:id="cb_direccion" maxWidth="Infinity" />
        <Label fx:id="l_timestamp" text="Fecha y hora del fichaje:" />
        <HBox prefHeight="2.0" prefWidth="248.0" spacing="10.0">
            <children>
                <DatePicker fx:id="dp_fecha" maxWidth="Infinity" HBox.hgrow="ALWAYS" />
                <TextField fx:id="tf_fechaHora" alignment="CENTER" maxWidth="40" minWidth="40" prefHeight="25.0" prefWidth="40.0" text="12" />
                <Label text=":" />
                <TextField fx:id="tf_fechaMinuto" alignment="CENTER" maxWidth="40" minWidth="40" prefHeight="25.0" prefWidth="40.0" text="00" />
            </children>
        </HBox>
        <HBox alignment="TOP_RIGHT" prefHeight="0.0" prefWidth="248.0" spacing="10.0">
            <children>
                <Button fx:id="b_cancelButton" mnemonicParsing="false" text="CANCELAR" />
                <Button fx:id="b_saveAndNewButton" layoutX="300.0" layoutY="10.0" mnemonicParsing="false" text="GUARDAR Y NUEVO" />
                <Button fx:id="b_saveButton" mnemonicParsing="false" text="GUARDAR" />
            </children>
        </HBox>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
</VBox>
